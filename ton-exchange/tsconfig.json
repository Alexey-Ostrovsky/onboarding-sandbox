{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "lib": ["ES2020"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "wrappers/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts"
  ]
}
